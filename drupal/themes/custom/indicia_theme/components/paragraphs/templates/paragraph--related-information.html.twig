{# Based on from drupal/modules/contrib/paragraphs/templates/paragraph.html.twig #}
{% set classes = [
  'paragraph',
  'paragraph--type--' ~ paragraph.bundle|clean_class,
  view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
  not paragraph.isPublished() ? 'paragraph--unpublished'
] %}
{% block paragraph %}
  <div{{ attributes.addClass(classes) }}>
    <div class="minfin-related">
      <div class="header"><span class="toggle-icon">-</span><span class="text">{{ 'Related information'|t }}</span></div>
      <div class="slider">
        <div class="content">
          {% block content %}
            {{ content }}
          {% endblock %}
        </div>
      </div>
    </div>
  </div>
{% endblock paragraph %}
