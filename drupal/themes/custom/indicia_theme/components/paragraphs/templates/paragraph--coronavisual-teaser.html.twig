{# Based on from drupal/modules/contrib/paragraphs/templates/paragraph.html.twig #}
{% set classes = [
  'paragraph',
  'paragraph--type--' ~ paragraph.bundle|clean_class,
  view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
  not paragraph.isPublished() ? 'paragraph--unpublished'
] %}
{% block paragraph %}
  <div{{ attributes.addClass(classes) }}>
    {% block content %}
      {% if content.corona_visual_teaser_url[0] %}
        <a href="{{ content.corona_visual_teaser_url[0] }}">
          {{ content.corona_visual_teaser_title }}
          <span class="visual">
            <img src="{{ content.visual[0] }}" alt="{{ content.corona_visual_teaser_title[0] }}">
            {{ content.corona_visual_teaser_text }}
            <span class="icon-arrow-down"></span>
          </span>
        </a>
      {% else %}
        {{ content }}
      {% endif %}
    {% endblock %}
  </div>
{% endblock paragraph %}
