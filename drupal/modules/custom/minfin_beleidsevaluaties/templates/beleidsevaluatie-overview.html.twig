  <div class="full-width-container">
    <div class="filters-wrapper">
      <h3>{{ 'Filter onderzoeken'|t }}:</h3>
      {{ filters }}
    </div>
    <div class="table-wrapper">
      {{ table }}
    </div>
    {{ pager }}
  </div>
</div>
